<div>
    {{#each article}}
    <div class="card">
        <div class="card-body">
            <a href="{{this.link}}" class="card-headline" target="_blank">
                <h4>{{this.headline}}</h4>
            </a>
            <p>{{this.summary}}</p>
            <form method="POST" action="/saved/{{this._id}}?_method=PUT">
                <button type="submit" class="btn btn-outline-info" id="SaveArticle">Save Article</button>
            </form>
        </div>
    </div>
    {{/each}}
</div>